<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.thinhlp.cocshopapp.activities.CustomerCheckoutActivity">

    <ImageView
        android:id="@+id/imgQRCode"
        android:layout_width="252dp"
        android:layout_height="248dp"
        app:srcCompat="@drawable/icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="62dp" />

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/imgQRCode"
        android:layout_marginTop="8dp"
        android:id="@+id/textView15"
        android:layout_width="290dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="This is your checkout QR code.\nPlease bring it to staff to complete ordering."
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/btnCaptureScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capture screen"
        android:textColor="#fff"
        android:background="@color/colorPrimary"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />


    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="32dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:gravity="center">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order at: "
            android:textStyle="bold"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/txtOrderDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017/08/09"
            android:textColor="#ff0000"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="83dp"
            tools:layout_editor_absoluteY="16dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView16"
            android:layout_toEndOf="@+id/textView16"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
